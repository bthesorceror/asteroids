@require 'whitespace-reset'

body
  background-color: #D3D3D3
  display: flex
  flex-direction: column

  h1
    font-weight: normal

  header
    background-color: #483D8B
    padding: 20px
    height: 50px

    h1
      color: white
      text-align: center
      font-size: 32pt

  #content
    padding-top: 10px
    padding-bottom: 10px

    #screen
      margin: auto
      display: block
      position: relative
      width: 100%
