@require 'whitespace-reset'

body
  background-color: #D3D3D3
  display: flex
  flex-direction: column

  h1
    font-weight: normal

  header
    background-color: #483D8B
    padding: 20px
    height: 50px

    h1
      color: white
      text-align: center
      font-size: 32pt

  #content
    padding-top: 10px
    padding-bottom: 10px

    canvas#screen
      margin: auto
      display: block
      width: 800px
      height: 600px
      border-style: solid
      border-width: 1px
      border-color: #483d8b
